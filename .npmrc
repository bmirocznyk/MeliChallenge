# Use Yarn as package manager (enforced by corepack)
package-manager=yarn

# Registry configuration
registry=https://registry.npmjs.org/

# Save exact versions instead of ranges
save-exact=true

# Auto install peer dependencies
auto-install-peers=true

# Enable package-lock for security
package-lock=true

# Prefer offline when possible
prefer-offline=true

# Increase network timeout
network-timeout=300000

# Security settings
audit-level=moderate
fund=false

# Progress and logging
progress=true
loglevel=warn

# Node version enforcement (matches .nvmrc)
engine-strict=true 